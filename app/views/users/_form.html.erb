
<%= form_for(@user) do |f| %>
    <div>
        <%= f.label :username, "Username:" %>
        <%= f.text_field :username %>
    </div>
    <div>
        <%= f.label :email, "Email:" %>
        <%= f.email_field :email, placeholder: "user@example.com" %>
    </div>
    <div>
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>
