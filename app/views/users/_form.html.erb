
<%= form_for(@user) do |f| %>
    <ul class="errors">
      <% @user.errors.full_messages.each do |err| %>
        <li><%= err %></li>
      <% end %>
    </ul>
    <div>
        <%= f.label :username, "Username:" %>
        <%= f.text_field :username %>
    </div>
    <div>
        <%= f.label :email, "Email:" %>
        <%= f.email_field :email, placeholder: "user@example.com" %>
    </div>
    <div>
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>
